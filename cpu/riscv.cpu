; Misc
(dni fence "fence" (base-isas all-machs)
  "fence ${succ},${pred}"
  (+ (f-uimm4-314 #b0000) pred succ (f-uimm20-1920 #b00000000000000001111))
  (nop) ())
(dni sfence.vm "sfence.vm"   (base-isas all-machs)
  "s.fence.vm ${rs1}"
  (+ (f-uimm12-3112 #b000100000100) rs1 (f-uimm15-1415 #b000000001110011))
  (nop) ())
(dni sfence.vma "sfence.vma" (base-isas all-machs)
  "sfence.vma ${rs1},${rs2}"
  (+ (f-uimm7-317 #b0001001) rs1 rs2 (f-uimm15-1415 #b000000001110011))
  (nop) ())
(rv-format-raw     "fence.i" (base-isas all-machs) #b00000000000000000001000000001111)
