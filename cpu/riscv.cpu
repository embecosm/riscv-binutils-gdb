;; Instruction formats

;===------------------ Compressed instructions formats ----------------------===

; Raw instruction
; +---------------+
; |15            0|
; | <instruction> |
; +---------------+
(define-pmacro (rv-format-craw mnemonic attr instr)
  (dni mnemonic mnemonic attr
    (.str mnemonic "")
    (+ (f-uimm16-1516 instr))
    (nop) ()))
; +--------+-----+------------+--------+
; |15    12|11  7|6          2|1      0|
; |<funct4>|<rs1>|<instr[6:2]>|<opcode>|
; +--------+-----+------------+--------+
(define-pmacro (rv-format-cr-1 mnemonic attr funct4 instr62 opcode)
  (dni mnemonic mnemonic attr
    (.str mnemonic " ${c-reg117-ne0}")
    (+ (f-c-funct4 funct4) c-reg117-ne0 (f-uimm5-65 instr62) (f-c-opcode opcode))
    (nop) ()))
; +--------+----+-----+--------+
; |15    12|11 7|6   2|1      0|
; |<funct4>|<rd>|<rs2>|<opcode>|
; +--------+----+-----+--------+
(define-pmacro (rv-format-cr-2 mnemonic attr funct4 opcode)
  (dni mnemonic mnemonic attr
    (.str mnemonic " ${c-reg117-ne0},${c-reg62-ne0}")
    (+ (f-c-funct4 funct4) c-reg117-ne0 c-reg62-ne0 (f-c-opcode opcode))
    (nop) ()))
; +--------+--------+-----+--------+
; |15    12|11     7|6   2|1      0|
; |<funct4>|<rs1/rd>|<rs2>|<opcode>|
; +--------+--------+-----+--------+
(define-pmacro (rv-format-cr-3 mnemonic attr funct4 opcode)
  (dni mnemonic mnemonic attr
    (.str mnemonic " ${c-reg117-ne0},${c-reg62-ne0}")
    (+ (f-c-funct4 funct4) c-reg117-ne0 c-reg62-ne0 (f-c-opcode opcode))
    (nop) ()))
; +--------+--------+-----+--------+
; |15    10|11     7|6   2|1      0|
; |<funct6>|<rs1/rd>|<rs2>|<opcode>|
; +--------+--------+-----+--------+
(define-pmacro (rv-format-cr-4 mnemonic attr funct6 instr65)
  (dni mnemonic mnemonic attr
    (.str mnemonic " ${c-reg97},${c-reg42}")
    (+ (f-c-funct6 funct6) c-reg97 (f-uimm2-62 instr65) c-reg42 (f-c-opcode #b01))
    (nop) ()))
; +--------+--------+----+----------+--------+
; |15    13|   12   |11 7|6        2|1      0|
; |<funct3>|<imm[5]>|<rd>|<imm[4:0]>|<opcode>|
; +--------+--------+----+----------+--------+
(define-pmacro (rv-format-ci-1 mnemonic attr funct3 opcode)
  (dni mnemonic mnemonic attr
    (.str mnemonic " ${c-reg117-ne0},${imm6-121-65-abs}")
    (+ (f-c-funct3 funct3) imm6-121-65-abs c-reg117-ne0 (f-c-opcode opcode))
    (nop) ()))
; +--------+--------+--------+----------+--------+
; |15    13|   12   |11     7|6        2|1      0|
; |<funct3>|<imm[5]>|<rd/rs1>|<imm[4:0]>|<opcode>|
; +--------+--------+--------+----------+--------+
(define-pmacro (rv-format-ci-2 mnemonic attr funct3 opcode)
  (dni mnemonic mnemonic attr
    (.str mnemonic " ${c-reg117},${nzimm6-121-65-abs}")
    (+ (f-c-funct3 funct3) nzimm6-121-65-abs c-reg117 (f-c-opcode opcode))
    (nop) ()))
; +--------+---------+--------+------------+--------+
; |15    13|   12    |11     7|6          2|1      0|
; |<funct3>|<imm[17]>|<rd/rs1>|<imm[16:12]>|<opcode>|
; +--------+---------+--------+------------+--------+
(define-pmacro (rv-format-ci-3 mnemonic attr funct3 opcode)
