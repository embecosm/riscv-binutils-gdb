      (or (or (sll (ifield f-uimm3-43) 3) (sll (ifield f-uimm1-121) 2))
          (ifield f-uimm2-62))))
  )
  (encode (value pc) (srl DI value 3))
  (decode (value pc) (sll DI value 3))
)

