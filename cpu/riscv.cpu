(dni add "add" (base-isas all-machs)
  "add ${rd},${rs1},${rs2},${tprel_add}"
  (+ (f-funct7 #b0000000) rs2 rs1 (f-funct3 #b000) rd (f-opcode #b0110011))
  (set WI rd (add WI rs1 rs2))
  ())
